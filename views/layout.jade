!!!5
html
  head
    meta(charset="utf-8")
    title= "Hello World!"
    link(rel= "stylesheet", href= "/css/style.css")
  body(data-hash= hash)
    section#form
      #text
        textarea#commentBox(data-placeholder= "Leave a message.")= "Leave a message."
      input#nick(type="text", value="Name", data-placeholder= "Name")
      input#email(type="text", value="Email", data-placeholder="Email")
      input#submit(type="submit", value="Comment") 
      img(src= "/img/poweredby.png")
    section#comments
      - for comment in comments
        article
          img.avatar(src= comment.author.avatar)
          span.nick= comment.author.nickname
          span.date= comment.date
          .post-body
            p= comment.msg
  script(src="/socket.io/socket.io.js")
  script(src="http://cdnjs.cloudflare.com/ajax/libs/jquery/1.8.2/jquery.min.js")
  script(src="/js/script.js")
